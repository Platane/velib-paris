{
    "name": "velib-paris",
    "version": "0.1.0",
    "author": "Platane <me@platane.me>",
    "license": "MIT",

    "dependencies": {
        "xml2js" : "*",
        "googleapis" : "2.x",
        "express" : "4"
    },

    "devDependencies": {
        "expect": "^1.8.0",
        "mocha" : "2.4",
        "eslint" : "*",
        "babel-eslint" : "*",
        "eslint-plugin-react" : "*",
        "babel-core" : "6.x",
        "babel-cli" : "6.x",
        "babel-register": "^6.0.0",
        "babel-preset-es2015": "6.x",
        "babel-preset-stage-1": "6.x",
        "babel-preset-stage-2": "6.x",
        "babel-plugin-transform-runtime": "6.x"
    },

    "engines": {
        "node": "4.x"
    },

    "scripts": {
        "build": "babel --out-dir ./dist ./src",

        "start:updater": "node -e \"require('babel-register');require('./updater.start.js')\"",
        "build:updater": "docker build --file ./updater.Dockerfile --tag=platane/paris-velib-updater .",
        "publish:updater": "docker push platane/paris-velib-updater",

        "start:dev:server": "env $( cat ../credentials/env.list ) node -e \"require('babel-register');require('./src/server.start.js')\"",
        "build:server": "docker build --file ./server.Dockerfile --tag=platane/paris-velib-server .",

        "test": "env NODE_ENV=\"test\" mocha --compilers js:babel-register --recursive --timeout 200 --bail",
        "test:watch": "npm test -- --watch"
    }

}
