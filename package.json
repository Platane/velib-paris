{
    "name": "velib-paris",
    "version": "0.1.0",
    "author": "Platane <me@platane.me>",
    "license": "MIT",

    "dependencies": {
        "three": "*",
        "three-orbit-controls": "*",
        "gl-matrix": "2.x",
        "mongodb" : "*",
        "xml2js" : "*",
        "googleapis" : "2.x",
        "express" : "*"
    },

    "devDependencies": {
        "eslint" : "*",
        "babel-eslint" : "*",
        "eslint-plugin-react" : "*",


        "webpack" : "1.x",
        "babel-loader" : "6.x",
        "babel-core" : "6.x",
        "babel-preset-es2015": "6.x",
        "babel-preset-react": "6.x",
        "babel-preset-stage-2": "6.x"
    },

    "main" : "run.js",

    "engines": {
        "node": "4.x"
    },

    "scripts": {
        "build": "env NODE_ENV=\"production\" node -e \"require('webpack')( require('./webpack.config.js'), function(err, stats){ if( err || stats.hasErrors() ){ console.log( stats.toJson().errors ); process.exit(1) } } )\"",

        "start": "node -e \"require('babel/register');require('./back/run')\"",
        "updateData": "node -e \"require('babel/register');require('./back/job/update')\"",

        "dev": "node node_modules/webpack-dev-server/bin/webpack-dev-server.js --port 8082 --content-base ./ -d",

        "test-dev": "node ./tests/_run.js",
        "test": "node ./.tmp/test.js"
    }

}
